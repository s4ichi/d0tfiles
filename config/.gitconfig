[user]
  name = takamasa-saichi
	email = takamasa-saichi@cookpad.com
	signingkey = CB2C33215050DF56AB949B9BAD45D54723E29B4D
[color]
  ui = auto
[alias]
	st = status
	co = checkout
	ca = commit -a
	ps = push
	unstage = reset HEAD
	lg = log --stat --graph --decorate=full
	pl = pull
[pull]
  rebase = true
[merge]
  ff = only
[push]
  default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[ghq]
	root = ~/src
[core]
	precomposeunicode = true
	quotepath = false
	# pager = LESSCHARSET=utf-8 less -cm
	pager = delta --file-color="#c7c7c7" --hunk-color="#c7c7c7" --theme='Dracula'
[url "git@github.com:"]
  insteadOf = https://github.com/
[merge "mergepbx"]
	name = Xcode project files merger
	driver = mergepbx %O %A %B
	note = auto-generated configuration by cpad2 upgrade
[github]
	token = 6c0ada762cfbb52dc6b14560a086bfaeaa1f092d
[gpg]
	program = gpg
[commi]
	gpgsign = true

[interactive]
    diffFilter = delta --color-only

[includeIf "gitdir:~/src/github.com/"]
	path = ~/.gitconfig.default
[includeIf "gitdir:~/go/src/github.com/"]
	path = ~/.gitconfig.default
