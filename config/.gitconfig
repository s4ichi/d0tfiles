[user]
  name = takamasa-saichi
  email = takamasa-saichi@cookpad.com
[color]
  ui = auto
[alias]
	st = status
	co = checkout
	ca = commit -a
	ps = push
	unstage = reset HEAD
	lg = log --stat --graph --decorate=full
	pl = pull
[pull]
  rebase = true
[merge]
  ff = only
[push]
  default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[ghq]
	root = ~/src
[core]
	precomposeunicode = true
	quotepath = false
  pager = LESSCHARSET=utf-8 less -cm
[url "git@github.com:"]
  insteadOf = https://github.com/
[merge "mergepbx"]
	name = Xcode project files merger
	driver = mergepbx %O %A %B
	note = auto-generated configuration by cpad2 upgrade
[github]
	token = 6c0ada762cfbb52dc6b14560a086bfaeaa1f092d
[gpg]
	program = gpg

[includeIf "gitdir:~/src/github.com/"]
	path = ~/.gitconfig.default
[includeIf "gitdir:~/go/src/github.com/"]
	path = ~/.gitconfig.default
